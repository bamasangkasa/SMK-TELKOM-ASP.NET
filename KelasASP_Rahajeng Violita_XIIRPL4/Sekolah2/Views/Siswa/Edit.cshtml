@model Sekolah2.Models.Siswa

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Siswa</legend>

        @Html.HiddenFor(model => model.SiswaID)

        <div class="editor-label">
            @Html.LabelFor(model => model.NamaSiswa)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NamaSiswa)
            @Html.ValidationMessageFor(model => model.NamaSiswa)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.KelasID, "Kelas")
        </div>
        <div class="editor-field">
            @Html.DropDownList("KelasID", String.Empty)
            @Html.ValidationMessageFor(model => model.KelasID)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
