        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Merk)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Merk)
            @Html.ValidationMessageFor(model => model.Merk)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Harga)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Harga)
            @Html.ValidationMessageFor(model => model.Harga)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Stok)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Stok)
            @Html.ValidationMessageFor(model => model.Stok)
        </div>

