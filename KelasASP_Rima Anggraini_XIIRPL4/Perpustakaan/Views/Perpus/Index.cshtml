@model IEnumerable<Perpustakaan.Models.Peminjaman>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @using (@Html.BeginForm())
    {
        <label>Search</label>
        <input type="text" name="SearchName" placeholder="name" />
        @Html.DropDownList("SearchName")
        <input type="submit" value="go" />
    }
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nama_Peminjam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tgl_Peminjaman)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Buku.Nama_Buku)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nama_Peminjam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tgl_Peminjaman)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Buku.Nama_Buku)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id_peminjaman }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id_peminjaman }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id_peminjaman })
        </td>
    </tr>
}

</table>
@Html.ActionLink("Back to Home", "Index", "Home")
