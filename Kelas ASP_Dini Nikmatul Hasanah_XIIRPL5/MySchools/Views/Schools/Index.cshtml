@model IEnumerable<MySchools.Models.Schools>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p> 
    @using (@Html.BeginForm())
    {
        <label>Search</label>
        <input type ="text" name="searchName" placeholder="Name" />
        @Html.DropDownList("searchYayasan", "Yayasan")

        <input type="submit" value="Go" />
    }
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SchoolName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Yayasan.NamaYayasan)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SchoolName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Yayasan.NamaYayasan)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SchoolID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SchoolID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SchoolID })
        </td>
    </tr>
}

</table>
